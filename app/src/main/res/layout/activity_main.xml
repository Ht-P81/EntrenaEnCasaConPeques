<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="408dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:paddingLeft="50dp"
        android:paddingTop="20dp"

        android:paddingRight="50dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_lock_power_off" />

        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/EditaPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Perfil" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="408dp"
        android:layout_height="470dp"
        android:layout_marginBottom="61dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <TextView
            android:id="@+id/TituloEjercicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="EJERCICIOS"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <TextView
            android:id="@+id/TituloFuerza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:paddingLeft="50dp"
            android:text="Fuerza"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            android:textStyle="italic" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <Button
            android:id="@+id/BotonSuperiores"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center|center_horizontal|center_vertical"
            android:onClick="botonListaEjercicios"
            android:text="SUPERIORES"
            android:textColor="@android:color/holo_blue_dark" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <Button
            android:id="@+id/BotonInferiores"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center_horizontal|center_vertical"
            android:onClick="botonListaEjercicios"
            android:text="INFERIORES"
            android:textColor="@android:color/holo_blue_dark" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <Button
            android:id="@+id/BotonAbdominales"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center|center_horizontal|center_vertical"
            android:onClick="botonListaEjercicios"
            android:text="ABDOMINALES"
            android:textColor="@android:color/holo_blue_dark" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <TextView
            android:id="@+id/TituloResistencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:paddingLeft="50dp"
            android:text="Resistencia"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            android:textStyle="italic" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <Button
            android:id="@+id/BotonCardio"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center|center_horizontal|center_vertical"
            android:onClick="botonListaEjercicios"
            android:text="CARDIO"
            android:textColor="@android:color/holo_blue_dark" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/tituloEntrenamiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="ENTRENAMIENTO"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="408dp"
        android:layout_height="60dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <Button
            android:id="@+id/botonHiitInfo"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center|center_horizontal|center_vertical"
            android:onClick="botonHiitInfo"
            android:text="Hiit Info"
            android:textColor="@android:color/holo_blue_dark" />

        <Space
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/botonHiit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center|center_horizontal|center_vertical"
            android:onClick="botonHiitTrainning"
            android:text="HIIT Trainning"
            android:textColor="@android:color/holo_blue_dark" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>